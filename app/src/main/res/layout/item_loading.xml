<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:layout_width="match_parent"
    android:layout_height="@dimen/itemHeight">

    <com.facebook.shimmer.ShimmerFrameLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="match_parent"
            android:paddingStart="@dimen/itemPadding"
            android:paddingTop="@dimen/loadingItemPaddingVertical"
            android:paddingEnd="@dimen/loadingItemPaddingEnd"
            android:paddingBottom="@dimen/loadingItemPaddingVertical">

            <View
                android:id="@+id/vwAvatar"
                android:layout_width="@dimen/iconSize"
                android:layout_height="@dimen/iconSize"
                android:layout_marginEnd="@dimen/itemPadding"
                android:background="@drawable/ic_circle_vector"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/vwAuthor"
                android:layout_width="@dimen/loadingPlaceholderViewWidth"
                android:layout_height="@dimen/loadingPlaceholderViewHeight"
                android:layout_marginStart="@dimen/itemPadding"
                android:background="@drawable/background_loading_bar"
                app:layout_constraintStart_toEndOf="@+id/vwAvatar"
                app:layout_constraintTop_toTopOf="parent" />

            <View
                android:id="@+id/vwName"
                android:layout_width="wrap_content"
                android:layout_height="@dimen/loadingPlaceholderViewHeight"
                android:layout_marginStart="@dimen/itemPadding"
                android:layout_marginTop="@dimen/itemPadding"
                android:background="@drawable/background_loading_bar"
                app:layout_constraintStart_toEndOf="@+id/vwAvatar"
                app:layout_constraintTop_toBottomOf="@+id/vwAuthor" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </com.facebook.shimmer.ShimmerFrameLayout>

    <View
        android:layout_width="match_parent"
        android:layout_height="1dp"
        android:layout_alignParentBottom="true"
        android:background="@drawable/item_decoration" />
</RelativeLayout>
