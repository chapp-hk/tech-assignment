<?xml version="1.0" encoding="utf-8"?>
<layout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools">

    <data>

        <variable
            name="viewHolder"
            type="com.gojek.assignment.app.trending.TrendingViewHolder" />
    </data>

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <androidx.constraintlayout.widget.ConstraintLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:padding="16dp">

            <com.facebook.drawee.view.SimpleDraweeView
                android:id="@+id/sdAvatar"
                android:layout_width="32dp"
                android:layout_height="32dp"
                app:imageURI="@{viewHolder.avatar}"
                app:layout_constraintBottom_toBottomOf="parent"
                app:layout_constraintStart_toStartOf="parent"
                app:layout_constraintTop_toTopOf="parent"
                app:roundAsCircle="true" />

            <TextView
                android:id="@+id/tvAuthor"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewHolder.author}"
                app:layout_constraintStart_toEndOf="@+id/sdAvatar"
                app:layout_constraintTop_toTopOf="parent"
                tools:text="Author" />

            <TextView
                android:id="@+id/tvName"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="@{viewHolder.name}"
                app:layout_constraintStart_toEndOf="@+id/sdAvatar"
                app:layout_constraintTop_toBottomOf="@+id/tvAuthor"
                tools:text="Name" />
        </androidx.constraintlayout.widget.ConstraintLayout>
    </LinearLayout>
</layout>